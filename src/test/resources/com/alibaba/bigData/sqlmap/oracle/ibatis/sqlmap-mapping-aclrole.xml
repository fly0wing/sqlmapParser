            </isNotEmpty>
            <isNotEmpty prepend="," property="isDelete">
                is_delete
            </isNotEmpty>
            <isNotEmpty prepend="," property="isVisible">
                is_visible
            </isNotEmpty>
            <isNotEmpty prepend="," property="description">
                description
            </isNotEmpty>
            <isNotEmpty prepend="," property="gmtCreate">
                gmt_create
            </isNotEmpty>
            <isNotEmpty prepend="," property="gmtModified">
