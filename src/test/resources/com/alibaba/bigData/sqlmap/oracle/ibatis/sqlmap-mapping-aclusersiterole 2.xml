	<select id="findRolesBySiteCount" parameterClass="java.util.Map" resultClass="java.lang.Integer">
	    <![CDATA[
			select count(*) from acl_user_site_role usr 
             inner join (select r.id from acl_role r where r.is_delete = #isDelete# and r.lev >= #lev#
        ]]>                 
        <dynamic>
            <isNotEmpty prepend="union all" property="roleIDs">
                select r.id from acl_role r where r.is_delete = #isDelete# and r.id in
                <iterate open="(" close=")" conjunction="," property="roleIDs">
                      #roleIDs[]#
                </iterate> 
            </isNotEmpty>
        </dynamic>
        <![CDATA[
                        ) r
                on usr.role_id = r.id
		]]>
		<dynamic prepend="where">
		    <isNotEmpty prepend="and" property="status">
                usr.status = #status#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="statusList">
                usr.status in
                <iterate property="statusList" open="(" close=")" conjunction=",">
			          #statusList[]#
		        </iterate>
            </isNotEmpty>
		    <isNotEmpty prepend="and" property="startDate">
                usr.gmt_create <![CDATA[>]]> #startDate#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="endDate">
                usr.gmt_create <![CDATA[<]]> #endDate#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="siteID">
                usr.site_id = #siteID#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="userID">
                usr.user_id = #userID#
            </isNotEmpty>
		</dynamic>
	</select>
	
	<select id="findRolesBySite" parameterClass="java.util.Map" resultClass="aclUserSiteRole">
	    <![CDATA[
	        select * from (select a.*, rownum num from (
			select usr.id, usr.user_id userId, usr.role_id roleId, usr.status, usr.site_id siteId,
			       usr.gmt_create gmtGreate, usr.gmt_modified gmtModified, usr.expired_date expiredDate,
			       usr.message, r.name roleName
              from acl_user_site_role usr 
             inner join (select r.id, r.name from acl_role r where r.is_delete = #isDelete# and r.lev >= #lev#
        ]]>
        <dynamic>
            <isNotEmpty prepend="union all" property="roleIDs">
                select r.id, r.name from acl_role r where r.is_delete = #isDelete# and r.id in
                <iterate open="(" close=")" conjunction="," property="roleIDs">
                      #roleIDs[]#
                </iterate> 
            </isNotEmpty>
        </dynamic>
        <![CDATA[                
                        ) r
                on usr.role_id = r.id
		]]>
		<dynamic prepend="where">
		    <isNotEmpty prepend="and" property="status">
                usr.status = #status#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="statusList">
                usr.status in
                <iterate property="statusList" open="(" close=")" conjunction=",">
			          #statusList[]#
		        </iterate>
            </isNotEmpty>
		    <isNotEmpty prepend="and" property="startDate">
                usr.gmt_create <![CDATA[>]]> #startDate#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="endDate">
                usr.gmt_create <![CDATA[<]]> #endDate#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="siteID">
                usr.site_id = #siteID#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="userID">
                usr.user_id = #userID#
            </isNotEmpty>
		</dynamic>
		<![CDATA[
		        order by usr.gmt_modified desc
		    ) a where rownum <= #end# ) where num >= #start#
        ]]>
	</select>
	
	<select id="findRolesBySiteAndUser" parameterClass="java.util.Map" resultClass="aclUserSiteRole">
	    <![CDATA[
			select t.id, t.role_id roleId, t.expired_date expiredDate, t.status, r.lev
			  from acl_user_site_role t
			 inner join (select r.id, r.lev from acl_role r where r.is_delete = #isDelete# and r.is_outsite = #isOutSite#) r
			   on t.role_id = r.id
		]]>
		<dynamic prepend="where">
