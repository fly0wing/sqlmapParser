	<select id="findResourceCountByAppNameAndCode" parameterClass="java.util.Map" resultClass="aclResource">
	    <![CDATA[
	        select t.id, t.is_delete isDelete
	          from acl_resource t
	         where t.app_name = #appName#
	           and t.resource_code = #resourceCode#
	    ]]>
	</select>
	
	<select id="findBlacklistByAppName" parameterClass="java.util.Map" resultClass="com.alibaba.china.cmshollywood.acl.domain.ACLRoleResource">
	    <![CDATA[
	        select t.id, t.url, rr.role_id roleID
              from acl_resource t
             inner join (select rr.resource_code, rr.role_id
                           from acl_role_resource rr
                          inner join (select r.id from acl_role r where r.is_delete = #isDelete#) r 
                             on rr.role_id = r.id
                          where rr.status = #status#) rr 
                on t.id = rr.resource_code
             where t.is_delete = #isDelete#
               and t.app_name = #appName#
	    ]]>
	</select>
	
